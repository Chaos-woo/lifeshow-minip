/* components/audio/index.wxss */
@font-face {font-family: "iconfont";
    src: url('//at.alicdn.com/t/font_1704620_v3wjrulggl9.eot?t=1584938693149'); /* IE9 */
    src: url('//at.alicdn.com/t/font_1704620_v3wjrulggl9.eot?t=1584938693149#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'),
    url('//at.alicdn.com/t/font_1704620_v3wjrulggl9.woff?t=1584938693149') format('woff'),
    url('//at.alicdn.com/t/font_1704620_v3wjrulggl9.ttf?t=1584938693149') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
