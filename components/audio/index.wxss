  }
  
  .iconfont {
    font-family: "iconfont" !important;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .icon-play:before {
    content: "\e63a";
  }
  
  .icon-Pause:before {
    content: "\e7bd";
  }


.flex{
    display: flex;
  }
  .player{
    width: 650rpx;
  }
  .audioControls{
    width: 100%;
    height: 80rpx;
    background: #ffffff;
    color: white;
    font-size: 6pt;
    line-height: 80rpx;
    text-align: center;
    border-radius: 0 0 10rpx 10rpx;
  }
  .audioControls .bottom{
    width: 60rpx;
    height: 100%;
  }
  .audioControls .bottom i{
    color: #000000;
    font-size: 30px;
  }
  .audioControls .slider{
    width: 520rpx;
    height: 100%;
  }
  .slider slider{
    width: 95%;
    margin-left: 4%;
    margin-right: 0;
  }
  .audioControls .time{
    width: 120rpx;
    height: 100%;
    color: #000000;
  }