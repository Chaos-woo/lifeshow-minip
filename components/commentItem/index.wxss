/* components/commentItem/index.wxss */
.comment-item {
  width: 100%;
  display: flex;
}

.mini{
  width: 100%;
  height: 65px;
  display: flex;
  margin-top: 3px;
}

.user{
  display: inline;
  font-size: 14px;
  color: #FA897B;
}

.avatar-item{
  width: 20%;
}

.video-img-item{
  width: 20%;
}

.content{
  width: 60%;
}

.content .text {
  margin: 10px 0 0;
  font-size: 12px;
  line-height: 20px;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  margin-left: 10px;
}

.video-img{
  width: 60px;
  height: 60px;
  margin-right: 10px;
  border-radius: 10px;
}

.mini-content,.content {
  padding:0 14px;
}

.mini-content .title,.content .title {
  margin: 0;
  font-size: 12px;
  line-height: 20px;
}

.mini-content .text{
  font-size: 12px;
  line-height: 20px;
  color: #fff;
}
