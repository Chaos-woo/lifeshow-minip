/* pages/message/message.wxss */
page {
  height: 100%;
  width: 100%;
}

#toolbar {
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}

#toolbar .img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  width: 130rpx;
}

.tips {
  font-size: 13px;
  color: gray;
}

.msg {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.msg-item {
  width: 100%;
  height: 80px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.msg-item .avatar {
  margin: 0 10px;
}

.msg-item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.content .title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 8px;
}

.content .text {
  width: 100%;
  font-size: 13px;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.msg-item .button {
    font-size: 10px;
    color: gray;
    margin-right: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}
