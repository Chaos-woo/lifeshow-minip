/* pages/login/login.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}

.img {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  padding-top: 50rpx;
}

.img image {
  width: 550rpx;
  height: 550rpx;
}

.buttons {
  padding-top: 90rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
}

.buttons van-button {
  margin-bottom: 30rpx;
  text-align: center;
}

.buttons .tex {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.buttons text {
  color: #f16d7e;
}

.footer {
  position: absolute;
  bottom: 10rpx;
  right: 170rpx;
}

.footer text {
  color: #cdcdcd;
  font-size: 25rpx;
}
