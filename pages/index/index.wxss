/* pages/index/index.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: relative;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

mp-video-swiper {
  width: 100%;
  height: 100%;
}

.tools {
  z-index: 998;
  position: absolute;
  right: 30rpx;
  bottom: 170rpx;
}

.cd {
  z-index: 998;
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  right: 30rpx;
  bottom: 40rpx;
}

.info {
  z-index: 998;
  position: absolute;
  width: 570rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  left: 30rpx;
  bottom: 120rpx;
}

.info .nickname {
  width: 100%;
  height: 40rpx;
  font-size: 27rpx;
  color: #75cce8;
  font-weight: bold;
}

.info .activ {
  width: 100%;
  height: 40rpx;
  font-size: 27rpx;
  color: #75cce8;
}

.info .description {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #a5dee5;
}

.damaku-input {
  width: 100%;
  color: #000;
  text-align: center;
  border-radius: 30rpx;
}

.comment-input {
  width: 100%;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
}

.damaku {
  z-index: 998;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 570rpx;
  height: 65rpx;
  font-size: 16px;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.3);
  position: absolute;
  bottom: 55rpx;
  left: 30rpx;
}

.comment {
  z-index: 999;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 65rpx;
  font-size: 16px;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.3);
  margin-left: 30rpx;
  margin-top: 10px;
}

.search-btn {
  z-index: 998;
  width: 50rpx;
  height: 50rpx;
}

.search-btn .search-img {
  width: 100%;
  height: 100%;
}

.list-btn {
  z-index: 998;
  width: 180rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.list-btn view {
  color: #dadada;
  font-size: 35rpx;
}

.line {
  z-index: 998;
  width: 70rpx;
  height: 5px;
}

.line .line-img {
  width: 100%;
  height: 100%;
}

.option {
  width: 100%;
  height: 50%;
  line-height: 220%;
  text-align: center;
  font-size: 42rpx;
}

.option-collect {
  color: #000;
}

.option-report {
  color: rgb(255, 0, 0);
  border-bottom: 1rpx solid #000;
}

.displayGroup {
  background: rgba(255,255,255,0);
  height: 300rpx;
  width: 750rpx;
  position: relative;
  overflow: hidden;
  z-index: 900;
}

.dmGroup {
  position: absolute;
  top: 140rpx;
  left: 100%;
  z-index: 995;
  animation-timing-function: linear;
  animation-fill-mode: none;
  transform: translateZ(0);
  white-space: nowrap;
  height: 60rpx;
}
.dmGroup.top {
  height: 60rpx;
}
.dmGroup.mid {
  height: 60rpx;
  top: 200rpx;
}
.dmGroup.btm {
  height: 60rpx;
  top: 260rpx;
}

.dmItem {
  display: inline-flex;
  margin-right: 60rpx;
  white-space: nowrap;
}
.dmItem .dm {
  display: inline-flex;
  vertical-align: middle;
  align-items: center;
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 15rpx 0 5rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 25rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #fff;
}

.dmItem .dm .content {
  display: inline-block;
  max-width: 440rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

@keyframes dmAnimation{
  from{ left: 100%; }
  to{ left: -100%; }
}